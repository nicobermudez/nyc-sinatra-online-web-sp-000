<h2>All Figures</h2>

<table>
  <th>Name</th>
  <th>Title</th>
  <th>Landmark</th>
  <tr>
    <% @figures.each do |figure| %>
      <td align="center"><a href="/figures/<%= figure.id%>"><%=figure.name%></a></td>
      <td align="center"><%= figure.year_completed %></td>
      <td align="center"><%= figure.title %></td>
      <td align="center"><%= figure.year_completed %></td>
    </tr>
    <% end %>
</table>

